<%- include('header') %>

<style>
  .sidebar-fixed {
      position: fixed;  
  };
  .ununderline {
    text-decoration: none !important;
    color: black !important;
  }
</style>
<h1 class="mb-4 mt-4"><%- tag === 'all' ? 'すべての記事' : "タグ：" + tag %></h1>
  <% const filteredArticles = (!tag || tag === 'all') ? articles : articles.filter(article => article.tag === tag); filteredArticles.forEach(article => {  %>
    <div class="card mt-3 mb-3 pt-1 pb-1">
      <a href="/article/<%= article.id %>">
      <div class="card-body">
        <h5 class="card-title" style="text-decoration: none!important; color: black !important;"><%= article.name %></h5>
        <p class="card-text"><%- article.description%></p>
      </div></a>
    </div>
  <% }) %>



  <script>
    window.addEventListener('scroll', function() {
      var element = document.getElementById('sidebar');
      var rect = element.getBoundingClientRect();
      element.style.position = 'fixed';
      element.style.top = rect.top + 'px';
      element.style.left = rect.left + 'px';
    });
  </script>
<%- include('footer') %>